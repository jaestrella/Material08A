<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00ffea"
    tools:context="com.iesvirgendelcarmen.dam.material08a.material08a">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_weight="2">
        <android.support.v7.widget.CardView
            android:id="@+id/tarjeta1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            card_view:cardBackgroundColor="#daa986"
            card_view:cardUseCompatPadding="true"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="10dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/cara1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cara1"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LEONARDO"
                android:textSize="15dp"
                android:layout_gravity="bottom"
                android:textAlignment="center"
                android:textColor="#001eff"
                android:background="#8cf7f3"/>
        </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/tarjeta2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="#daa986"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="10dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/cara2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cara2"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MIGUEL ANGEL"
            android:textSize="15dp"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:textColor="#001eff"
            android:background="#8cf7f3"/>
    </android.support.v7.widget.CardView>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2">
        <android.support.v7.widget.CardView
            android:id="@+id/tarjeta3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            card_view:cardBackgroundColor="#daa986"
            card_view:cardUseCompatPadding="true"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="10dp"
            android:layout_weight="1">
        <ImageView
            android:id="@+id/cara3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cara3"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BERNINI"
            android:textSize="15dp"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:textColor="#001eff"
            android:background="#8cf7f3"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/tarjeta4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="#daa986"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="10dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/cara4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cara4"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RAFAEL"
            android:textSize="15dp"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:textColor="#001eff"
            android:background="#8cf7f3"/>
    </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>
